<%- include('partials/head', { pageTitle: 'Residences' }) %>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz" crossorigin="anonymous" defer></script>
<script src="/scripts/script.js" defer></script>
<script src="/scripts/filter.js" defer></script>
<style>
  .content::before {
    content: '';
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    background: url("/images/bg.png") no-repeat center center;
    background-size: cover;
    z-index: -1;
  }
</style>
<link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH"
      crossorigin="anonymous"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.10.5/font/bootstrap-icons.min.css"
      rel="stylesheet"
    />
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Righteous&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inria+Sans:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Inria+Serif:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Righteous&family=Roboto+Flex:opsz,wght@8..144,100..1000&display=swap" rel="stylesheet">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Inria+Serif:ital,wght@0,300;0,400;0,700;1,300;1,400;1,700&family=Righteous&family=Roboto+Flex:opsz,wght@8..144,100..1000&display=swap" rel="stylesheet">
    
<link rel="stylesheet" href="/css/staff.css" />
<link rel="stylesheet" href="/css/mediaQueries.css" />
<link rel="stylesheet" href="../../css/card.css">
<link rel="stylesheet" href="../../css/residences.css">
<link rel="stylesheet" href="../../css/style.css" />
</head>
<body>
  <div class="content">
    <div class="overlay">
      <div class="overlay-text">
        <h1>Residence Selection</h1>
      </div>
    </div>
    <div class="text-box">
      <p>
        You will have a choice of 3 residences, if you are selected at one of these residences you will receive notification from the residence placement committee. If you were unsuccessful with a placement you will be placed on the main waiting list.
        </p>
    </div>
  </div>
  <section id="filter">
    <div
          class="sub-head-right d-flex align-items-center justify-content-center gap-4"
        >
          <h4>Filter By</h4>
          <div class="staff-checkbox d-flex align-items-center gap-3">
            <input type="checkbox" class="check-box" id="male" />
            <label for="male" id="gender">Male</label>
          </div>
          <div class="staff-checkbox d-flex align-items-center gap-3">
            <input type="checkbox" class="check-box" id="female"/>
            <label for="female">Female</label>
          </div>
          <div class="staff-checkbox d-flex align-items-center gap-3">
            <input type="checkbox" class="check-box" id="undergraduate"/>
            <label for="undergraduate">Undergraduate</label>
          </div>
          <div class="staff-checkbox d-flex align-items-center gap-3">
            <input type="checkbox" class="check-box" id="postgraduate"/>
            <label for="postgraduate">Postgraduate</label>
          </div>
        </div>
  </section>

  <section id="cards">
    <!-- all residences -->
    <div class="row row-cols-1 row-cols-md-3 g-4" id="allOptions">
        <% for (const residence of residences) {%>
          <div class="col">
          <div class="card"> 
            <img src="<%= residence.imagePath %>" class="card-img-top" alt="Residence image" style="width: 100%; height:300px;" />
            <div class="card-body">
              <h5 class="card-title"><%= residence.title%></h5>
              <p class="card-text"><%= residence.description%></p>
              <div class="card-body">
                <a href="/residences/<%= residence._id%>" id="button">View & Apply</a>               
              </div>
           </div>  
          </div>
        </div>  
        <% } %>
      </div>
      
      <!-- male residences -->
    <div class="row row-cols-1 row-cols-md-3 g-4" id="maleOption" style="display: none;">
      <% for (const residence of residences) {%>
        <% if (residence.gender === "male") {%>
          <div class="col">
            <div class="card"> 
              <img src="<%= residence.imagePath %>" class="card-img-top" alt="Residence image" style="width: 100%; height:300px;" />
              <div class="card-body">
                <h5 class="card-title"><%= residence.title%></h5>
                <p class="card-text"><%= residence.description%></p>
                <div class="card-body">
                  <a href="/residences/<%= residence._id%>" id="button">View & Apply</a>               
                </div>
             </div>  
            </div>
          </div>
        <% } %>  
      <% } %>
    </div>

    <!-- female residences -->
    <div class="row row-cols-1 row-cols-md-3 g-4" id="femaleOption" style="display: none;">
      <% for (const residence of residences) {%>
        <% if (residence.gender === "female") {%>
          <div class="col">
            <div class="card"> 
              <img src="<%= residence.imagePath %>" class="card-img-top" alt="Residence image" style="width: 100%; height:300px;" />
              <div class="card-body">
                <h5 class="card-title"><%= residence.title%></h5>
                <p class="card-text"><%= residence.description%></p>
                <div class="card-body">
                  <a href="/residences/<%= residence._id%>" id="button">View & Apply</a>               
                </div>
             </div>  
            </div>
          </div>
        <% } %>  
      <% } %>
    </div>

    <!-- undergraduate residences -->
    <div class="row row-cols-1 row-cols-md-3 g-4" id="undergraduateOption" style="display: none;">
      <% for (const residence of residences) {%>
        <% if (residence.title != "Biko House") {%>
          <div class="col">
            <div class="card"> 
              <img src="<%= residence.imagePath %>" class="card-img-top" alt="Residence image" style="width: 100%; height:300px;" />
              <div class="card-body">
                <h5 class="card-title"><%= residence.title%></h5>
                <p class="card-text"><%= residence.description%></p>
                <div class="card-body">
                  <a href="/residences/<%= residence._id%>" id="button">View & Apply</a>               
                </div>
             </div>  
            </div>
          </div>
        <% } %>  
      <% } %>
    </div>

    <!-- postgraduate residences -->
    <div class="row row-cols-1 row-cols-md-3 g-4" id="postgraduateOption" style="display: none;">
      <% for (const residence of residences) {%>
        <% if (residence.title === "Biko House") {%>
          <div class="col">
            <div class="card"> 
              <img src="<%= residence.imagePath %>" class="card-img-top" alt="Residence image" style="width: 100%; height:300px;" />
              <div class="card-body">
                <h5 class="card-title"><%= residence.title%></h5>
                <p class="card-text"><%= residence.description%></p>
                <div class="card-body">
                  <a href="/residences/<%= residence._id%>" id="button">View & Apply</a>               
                </div>
             </div>  
            </div>
          </div>
        <% } %>  
      <% } %>
    </div>
  </section>


</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js" integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM" crossorigin="anonymous"></script>
