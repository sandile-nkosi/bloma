<%- include('../shared/partials/head', { pageTitle: 'Update Password' }) %>
    <style>
        body {
            background: url("/images/login-bg.jfif") no-repeat center center;
            background-size: cover;
        }

        body::before {
            content: "";
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.7);
            z-index: -1;
        }
    </style>
    </head>

    <body>
        <div class="back-arrow">
            <a href="/"><i class="bi bi-arrow-left"></i></a>
        </div>
        <div class="login-container">
            <div class="login-card">
                <div class="icon-box">
                    <i class="bi bi-lock-fill"></i>
                </div>
                <% if(inputData.hasError) {%>
                    <div class="alert alert-warning alert-dismissible fade show" role="alert">
                      <%= inputData.message %>
                      <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                  <% } %>
                        <form action="/student/update-password/<%= email %>/<%= newOtp %>" method="POST">
                            <label for="newPassword">New Password</label>
                            <input type="password" id="password" name="password" value="<%= inputData.password %>" required minlength="6">
                            <label for="password2">Confirm Password</label>
                            <input type="password" id="password2" name="password2" value="<%= inputData.password %>" required>
                            <div class="d-flex align-items-center justify-content-evenly">
                                <button type="submit">Submit</a></button>
                                <button type="reset" class="clear-btn">Clear</button>
                            </div>
                        </form>
            </div>
        </div>
